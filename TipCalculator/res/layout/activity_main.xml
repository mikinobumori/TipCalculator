<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/main_person1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="30dp"
        android:text="Person1"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/main_person3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_person2_tv"
        android:layout_below="@+id/main_person2_tv"
        android:padding="30dp"
        android:text="Person2"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/main_person2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_person1_tv"
        android:layout_below="@+id/main_person1_tv"
        android:padding="30dp"
        android:text="Person3"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/main_tip_percent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_person3_tv"
        android:layout_below="@+id/main_person3_tv"
        android:padding="30dp"
        android:text="Tip %"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/main_item3_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_person3_tv"
        android:layout_alignBottom="@+id/main_person3_tv"
        android:layout_toRightOf="@+id/main_person3_tv"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/main_item2_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_person2_tv"
        android:layout_alignBottom="@+id/main_person2_tv"
        android:layout_toRightOf="@+id/main_person2_tv"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/main_item1_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_person1_tv"
        android:layout_alignBottom="@+id/main_person1_tv"
        android:layout_toRightOf="@+id/main_person1_tv"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/black" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/main_calc_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/calculate"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/main_tip_percent_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_tip_percent_tv"
        android:layout_alignBottom="@+id/main_tip_percent_tv"
        android:layout_toRightOf="@+id/main_tip_percent_tv"
        android:ems="10"
        android:inputType="number" >
    </EditText>

</RelativeLayout>